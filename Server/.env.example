# ============================================
# Nexarch Server Configuration
# Copy this to .env and fill in your values
# ============================================

# App Settings
APP_NAME=Nexarch
APP_VERSION=2.0.0
DEBUG=false
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./nexarch.db
# For PostgreSQL: postgresql://user:password@host:5432/nexarch

# ============================================
# Azure Cache for Redis Configuration
# ============================================
# Option 1: Full URL (Recommended for Azure)
REDIS_URL=rediss://:YOUR_REDIS_PASSWORD@your-cache.redis.cache.windows.net:6380/0

# Option 2: Individual components (alternative)
# REDIS_HOST=your-cache.redis.cache.windows.net
# REDIS_PORT=6380
# REDIS_PASSWORD=your_redis_password
# REDIS_SSL=True
# REDIS_DB=0

# Cache Settings
CACHE_TTL_SECONDS=300
CACHE_ENABLED=True

# ============================================
# Azure OpenAI Configuration
# ============================================
AZURE_OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_TEMPERATURE=0.7
AZURE_OPENAI_MAX_TOKENS=2000

# Authentication & Security
JWT_SECRET_KEY=your-secret-key-change-this-in-production
API_KEY_PREFIX=nex_

# ============================================
# Google OAuth Configuration
# ============================================
# Get these from Google Cloud Console:
# 1. Go to https://console.cloud.google.com/
# 2. Create a project or select existing
# 3. Enable Google+ API
# 4. Go to Credentials > Create Credentials > OAuth 2.0 Client ID
# 5. Add authorized redirect URIs:
#    - https://api.modelix.world/auth/google/callback (production)
#    - http://localhost:8000/auth/google/callback (development)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://api.modelix.world/auth/google/callback

# Rate Limiting
RATE_LIMIT_PER_MINUTE=1000

# Detection Thresholds
HIGH_LATENCY_THRESHOLD_MS=1000
HIGH_ERROR_RATE_THRESHOLD=0.05
MAX_SYNC_CHAIN_DEPTH=5
MAX_FAN_OUT=10

# AI Settings
ENABLE_AI_GENERATION=True
MAX_WORKFLOW_ALTERNATIVES=5

# CORS
CORS_ORIGINS=["*"]

# Feature Flags
ENABLE_MULTI_TENANT=True
ENABLE_CACHING=True
ENABLE_RATE_LIMITING=True

# ============================================
# Azure Cache for Redis Setup Instructions
# ============================================
# 1. Create Azure Cache for Redis in Azure Portal
# 2. Choose tier: Basic, Standard, or Premium  
# 3. Get connection string from "Access keys" section
# 4. Format: rediss://:PRIMARY_ACCESS_KEY@YOUR_CACHE_NAME.redis.cache.windows.net:6380/0
# 5. Set REDIS_URL above
